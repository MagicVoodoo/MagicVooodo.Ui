            <ui:TabView Title="Tab 1" Icon="Icon.png">
                <StackLayout>
                    <Label Text="This is tab 1" />
                </StackLayout>
            </ui:TabView>
            <ui:TabView Title="Tab 2">
                <StackLayout>
                    <Label Text="This is tab 2" />
                </StackLayout>
            </ui:TabView>
            <ui:TabView Title="Tab 3" Icon="Icon.png">
                <StackLayout>
                    <Label Text="This is tab 3" />
                </StackLayout>
            </ui:TabView>
        </ui:TabbedLayout>
